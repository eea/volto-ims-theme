/*-------------------
      HEADER
--------------------*/

.ui.secondary.segment {
  background: transparent;
  color: @lightBlue;
}

.ui.vertical.segment {
  z-index: 1;
  padding: 8px 0;
  border: 1px solid #ececec;
  background-color: #fff;
}

.section-edit {
  .ui.basic.segment.content-area {
    margin-top: -3.5rem;
  }
}

.ui.basic.segment.content-area {
  position: relative;

  &::before {
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 100%;
    max-height: 300px;
    margin-top: -2rem;
    background: #00888a;
    content: ' ';
    @media only screen and (max-width: 1400px) {
      max-height: 290px;
    }
  }

  #page-document {
    padding: 2.25rem 3rem 3rem 2.2rem;
    margin-top: 100px !important;
    background: #fff;

    @media only screen and (max-width: 1400px) {
      margin-top: 120px !important;
    }

    @media only screen and (max-width: 768px) {
      padding-top: 2rem;
      margin-right: 0 !important;
      margin-left: 0 !important;
    }

    @media only screen and (min-width: 768px) and (max-width: 1400px) {
      padding: 2rem 3rem 3rem 2.2rem !important;
    }
  }

  #page-edit,
  #page-add {
    position: relative;
    padding: 3rem;
    margin-top: 7.5rem;

    &::before {
      position: absolute;
      z-index: -1;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #fff;
      content: ' ';
    }
  }

  #page-login,
  #page-contents,
  #page-controlpanel-schema,
  #page-controlpanel,
  #page-addons,
  #page-history,
  #page-sharing,
  .types-control-panel,
  .view-wrapper {
    padding-top: 2rem !important;
    margin-top: -2rem !important;
    background-color: #fff;

    &::before {
      position: absolute;
      z-index: -1;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #fff;
      content: ' ';
    }
  }
}

.second-footer .ui.segment {
  border: none;
  box-shadow: none;
}

.ui.segment.footer-wrapper {
  padding: 1.125rem 0 !important;
  border: none !important;
  margin-bottom: 0;
}
